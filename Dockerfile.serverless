# PeteOllama V1 - RunPod Serverless Optimized
# Uses RunPod's pre-built Ollama container for fast deployment

FROM pooyaharatian/runpod-ollama:0.0.8

# Set working directory
WORKDIR /app

# Copy our custom requirements (only what's not already included)
COPY requirements.serverless.txt ./

# Install additional Python dependencies we need
RUN pip install --no-cache-dir -r requirements.serverless.txt

# Copy application source code
COPY src/ ./src/
COPY config/ ./config/
COPY .env ./

# Create necessary directories
RUN mkdir -p /app/data /app/logs /app/models /app/public

# Copy public assets
COPY src/public/ ./public/

# Set Python path and environment
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose single port for serverless endpoint
EXPOSE 8000

# Health check for RunPod
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Default command - serverless handler
CMD ["python", "rp_handler.py"]
